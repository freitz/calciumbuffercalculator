<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel >
			<g:Label text="Calcium Buffer Calculator" ui:field="lblTitle" />
			<g:HTML wordWrap="true">Calculates free calcium concentration in Ca<sup>2+</sup>EGTA buffer</g:HTML>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtpM2E"/>
				<g:HTML wordWrap="true">pM<sup>2+</sup><sub>E</sub></g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtpM2"/>
				<g:HTML wordWrap="true">pM<sup>2+</sup></g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtpMg"/>
				<g:HTML wordWrap="true">pMg</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtpATP"/>
				<g:HTML wordWrap="true">pATP</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:Cell>
					<g:TextArea ui:field="txtEGTATotal"/>
				</g:Cell>
				<g:HTML wordWrap="true">EGTA total (M)</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtHDTATotal"/>
				<g:HTML wordWrap="true">HDTA total (M)</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtCPTotal"/>
				<g:HTML wordWrap="true">total CP (M)</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtpH"/>
				<g:HTML wordWrap="true">pH</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtTESTotal"/>
				<g:HTML wordWrap="true">TES (M)</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtKOHAdded"/>
				<g:HTML wordWrap="true">added KOH (M)</g:HTML>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtIonicStrength"/>
				<g:HTML wordWrap="true">ionic strength (M)</g:HTML>
			</g:HorizontalPanel>
			
			<g:Button ui:field="btnCalculate" text="Calculate"/>
			<g:VerticalPanel ui:field="pnlResult"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 