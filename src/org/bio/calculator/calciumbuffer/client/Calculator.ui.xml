<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel >
			<g:Label text="EGTA Calculator" ui:field="lblTitle" />
			<g:HTML wordWrap="true">Calculates free calcium concentration in Ca<sup>2+</sup>EGTA buffer</g:HTML>
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtCalciumTotal"/>
				<g:HTML wordWrap="true">Ca<sup>2+</sup> total (M)</g:HTML>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Cell>
					<g:TextArea ui:field="txtEGTATotal"/>
				</g:Cell>
				<g:HTML wordWrap="true">EGTA total (M)</g:HTML>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtMagnesiumTotal"/>
				<g:HTML wordWrap="true">Mg<sup>2+</sup> total (M)</g:HTML>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:TextArea ui:field="txtPhLevel"/>
				<g:HTML wordWrap="true">pH</g:HTML>
			</g:HorizontalPanel>
			<g:Button ui:field="btnCalculate" text="Calculate"/>
			<g:VerticalPanel ui:field="pnlResult"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 